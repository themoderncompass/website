---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- Hero Section with Purple Gradient Box -->
  <section class="newsletter-hero-new">
    <div class="hero-container-new">
      <div class="hero-box">
        <div class="brand-title">Modern Compass Newsletter</div>
        
        <h1 class="main-headline">Stop the scroll and start taking <span class="highlight">action</span> to build your compass</h1>
        
        <p class="main-description">
          A <strong>purpose-filled email once a month</strong> (every 3rd Friday) with insights, tools, and actions you can take.
        </p>
        
        <div class="value-statement">
          <p>
            No hours of podcasts per week, no daily emails, just once a month to give you depth and room to take action, reflect, and repeat.
          </p>
        </div>

        <div class="signup-bonuses">
          <p><strong>Exclusive signup bonuses delivered right to your inbox:</strong></p>
          <ul>
            <li>Digital asset to reclaim time during your busy week</li>
            <li>Social accountability web app/game</li>
          </ul>
        </div>

        <!-- Social Proof Text -->
        <div class="social-proof-text">
          <p>Join <strong class="highlight-purple">100+</strong> subscribers and <strong class="highlight-purple">1,000+</strong> TikTok followers finding their direction</p>
        </div>

        <!-- Subscribe Form -->
        <div class="newsletter-embed-new">
          <iframe
            src="https://subscribe-forms.beehiiv.com/261a3276-40ab-431a-8523-c85bec095b96"
            class="beehiiv-embed-styled"
            frameborder="0"
            scrolling="no"
            style="width: 100%; height: 135px; border: none; border-radius: 8px; background-color: transparent;"
            title="Subscribe to Modern Compass on Beehiiv"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- What You Get Section -->
  <section class="what-you-get-section">
    <h2>What You Get Every Month</h2>
    <p class="section-description">Insights, tools, frameworks and a growing community to help you find direction and move you forward, some built by Modern Compass, just for you!</p>

    <!-- Tools Header -->
    <div class="tools-header">
      <h3>Access to Modern Tools</h3>
      <p>As a subscriber, explore our growing library of personal growth resources</p>
    </div>

    <!-- Image Carousel -->
    <div class="asset-carousel">
      <div class="carousel-container">
        <div class="carousel-track" id="carousel-track">
          <div class="carousel-slide active">
            <img src="/Impulse_wallet_ipad.png" alt="Impulse Wallet Beta - App to track focus areas" />
            <div class="slide-caption">
              <h3>Impulse Wallet</h3>
              <p>App to track focus areas</p>
            </div>
          </div>
          <div class="carousel-slide">
            <img src="/TimeOS_asset.png" alt="TimeOS Digital Asset - 5-step system for time and attention management" />
            <div class="slide-caption">
              <h3>TimeOS Digital Asset</h3>
              <p>Reclaim your time and redirect it toward focus areas you want to progress in</p>
            </div>
          </div>
          <div class="carousel-slide">
            <img src="/book-graphic.png" alt="Modern Compass Book - Beta reader signup coming soon" />
            <div class="slide-caption">
              <h3>Book Resources</h3>
              <p>Beta reader signup coming, stay subscribed to the newsletter if interested</p>
            </div>
          </div>
        </div>

        <!-- Navigation -->
        <div class="carousel-nav">
          <button class="carousel-btn prev" id="prev-btn">‹</button>
          <div class="carousel-dots">
            <button class="dot active" data-slide="0"></button>
            <button class="dot" data-slide="1"></button>
            <button class="dot" data-slide="2"></button>
          </div>
          <button class="carousel-btn next" id="next-btn">›</button>
        </div>
      </div>
    </div>
  </section>

</Layout>

<style>
  /* New Hero Section Styles */
  .newsletter-hero-new {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 3rem 1.5rem;
    margin: -1rem -1rem 2rem -1rem;
    border-radius: 20px;
  }

  .hero-container-new {
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-box {
    background: rgba(255, 255, 255, 0.98);
    border-radius: 16px;
    padding: 2.5rem 2rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .brand-title {
    font-size: 1.3rem;
    font-weight: 700;
    color: #667eea;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .main-headline {
    font-size: 2.2rem;
    font-weight: 700;
    color: #1a1a1a;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .main-headline .highlight {
    color: #667eea;
  }

  .main-description {
    font-size: 1.2rem;
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .main-description strong {
    color: #1a1a1a;
    font-weight: 600;
  }

  .value-statement {
    background: #f7fafc;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .value-statement p {
    font-size: 1rem;
    color: #2d3748;
    line-height: 1.7;
    margin: 0;
  }

  .signup-bonuses {
    background: linear-gradient(135deg, #e0f2fe 0%, #f0f9ff 100%);
    border: 1px solid #b3e5fc;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .signup-bonuses p {
    margin-bottom: 0.5rem;
    color: #1e40af;
    font-weight: 600;
  }

  .signup-bonuses ul {
    margin: 0;
    padding-left: 1.5rem;
  }

  .signup-bonuses li {
    font-size: 0.95rem;
    color: #1e40af;
    line-height: 1.5;
    margin-bottom: 0.25rem;
    font-weight: 500;
  }

  .social-proof-text {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .social-proof-text p {
    font-size: 1rem;
    color: #4a5568;
    margin: 0;
  }

  .highlight-purple {
    color: #667eea;
    font-weight: 700;
  }

  .newsletter-embed-new {
    margin-bottom: 1rem;
  }

  .beehiiv-embed-styled {
    display: block;
    margin: 0 auto;
    max-width: 500px;
  }

  /* What You Get Section */
  .what-you-get-section {
    max-width: 900px;
    margin: 3rem auto;
    padding: 2rem 1.5rem;
    text-align: center;
    background: #f9fafb;
    border-radius: 16px;
  }

  .what-you-get-section h2 {
    font-size: 2rem;
    color: #111827;
    margin-bottom: 1rem;
  }

  .section-description {
    font-size: 1.1rem;
    color: #4a5568;
    line-height: 1.6;
    margin: 0 0 2rem 0;
  }

  .tools-header {
    margin: 2rem 0 1.5rem 0;
  }

  .tools-header h3 {
    font-size: 1.5rem;
    color: #111827;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .tools-header p {
    font-size: 1rem;
    color: #6b7280;
    margin: 0;
  }

  /* Asset Carousel */
  .asset-carousel {
    max-width: 800px;
    margin: 0 auto;
  }

  .carousel-container {
    position: relative;
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .carousel-track {
    display: flex;
    transition: transform 0.4s ease;
  }

  .carousel-slide {
    min-width: 100%;
    display: flex;
    align-items: center;
    gap: 2rem;
    padding: 2rem;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .carousel-slide.active {
    opacity: 1;
  }

  .carousel-slide img {
    width: 300px;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    flex-shrink: 0;
  }

  .slide-caption {
    flex: 1;
  }

  .slide-caption h3 {
    font-size: 1.5rem;
    color: #111827;
    margin-bottom: 0.75rem;
    font-weight: 700;
  }

  .slide-caption p {
    font-size: 1.1rem;
    color: #4a5568;
    line-height: 1.6;
    margin: 0;
  }

  .carousel-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    background: #f8f9fa;
    border-top: 1px solid #e5e7eb;
  }

  .carousel-btn {
    background: #667eea;
    color: white;
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    font-size: 1.2rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.2s ease, transform 0.1s ease;
    font-weight: bold;
  }

  .carousel-btn:hover {
    background: #5a67d8;
    transform: scale(1.05);
  }

  .carousel-btn:active {
    transform: scale(0.95);
  }

  .carousel-dots {
    display: flex;
    gap: 0.5rem;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: none;
    background: #d1d5db;
    cursor: pointer;
    transition: background-color 0.2s ease, transform 0.1s ease;
  }

  .dot.active {
    background: #667eea;
  }

  .dot:hover {
    background: #9ca3af;
    transform: scale(1.1);
  }


  /* Mobile Responsive */
  @media (max-width: 767px) {
    .newsletter-hero-new {
      padding: 1rem 0.75rem;
      margin: -0.5rem -1rem 1rem -1rem;
    }

    .hero-box {
      padding: 1rem 1rem;
    }

    .brand-title {
      font-size: 1rem;
      margin-bottom: 0.75rem;
    }

    .main-headline {
      font-size: 1.4rem;
      margin-bottom: 0.75rem;
      line-height: 1.1;
    }

    .main-description {
      font-size: 0.9rem;
      margin-bottom: 0.75rem;
    }

    .value-statement {
      padding: 0.75rem;
      margin-bottom: 1rem;
    }

    .value-statement p {
      font-size: 0.85rem;
    }

    .signup-bonuses {
      padding: 0.5rem 0.75rem;
      margin-bottom: 1rem;
    }

    .signup-bonuses p {
      font-size: 0.85rem;
      margin-bottom: 0.25rem;
    }

    .signup-bonuses li {
      font-size: 0.8rem;
      margin-bottom: 0.15rem;
    }

    .social-proof-text {
      margin-bottom: 1rem;
    }

    .social-proof-text p {
      font-size: 0.9rem;
    }

    .newsletter-embed-new {
      margin-bottom: 0.5rem;
    }

    .what-you-get-section {
      padding: 1rem;
      margin: 1.5rem auto;
    }

    .what-you-get-section h2 {
      font-size: 1.5rem;
      margin-bottom: 0.75rem;
    }

    .section-description {
      font-size: 0.95rem;
    }

    .tools-header {
      margin: 1.5rem 0 1rem 0;
    }

    .tools-header h3 {
      font-size: 1.2rem;
    }

    .tools-header p {
      font-size: 0.9rem;
    }

    /* Mobile Carousel */
    .carousel-slide {
      flex-direction: column;
      text-align: center;
      gap: 0.75rem;
      padding: 1rem 0.75rem;
    }

    .carousel-slide img {
      width: 220px;
      max-width: 85%;
    }

    .slide-caption h3 {
      font-size: 1.2rem;
      margin-bottom: 0.25rem;
    }

    .slide-caption p {
      font-size: 0.9rem;
      line-height: 1.4;
      margin: 0;
    }

    .carousel-nav {
      padding: 0.5rem 0.75rem;
    }

    .carousel-btn {
      width: 32px;
      height: 32px;
      font-size: 0.9rem;
    }
  }
</style>

<script is:inline>
  // Add class to body for custom styling
  document.body.classList.add('newsletter-page');

  // Carousel functionality
  document.addEventListener('DOMContentLoaded', function() {
    const track = document.getElementById('carousel-track');
    const slides = document.querySelectorAll('.carousel-slide');
    const dots = document.querySelectorAll('.dot');
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');

    let currentSlide = 0;
    const totalSlides = slides.length;

    function showSlide(index) {
      // Remove active class from all slides and dots
      slides.forEach(slide => slide.classList.remove('active'));
      dots.forEach(dot => dot.classList.remove('active'));

      // Add active class to current slide and dot
      slides[index].classList.add('active');
      dots[index].classList.add('active');

      // Move track
      track.style.transform = `translateX(-${index * 100}%)`;

      currentSlide = index;
    }

    function nextSlide() {
      const next = (currentSlide + 1) % totalSlides;
      showSlide(next);
    }

    function prevSlide() {
      const prev = (currentSlide - 1 + totalSlides) % totalSlides;
      showSlide(prev);
    }

    // Event listeners
    nextBtn.addEventListener('click', nextSlide);
    prevBtn.addEventListener('click', prevSlide);

    // Dot navigation
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => showSlide(index));
    });

    // Auto-advance every 8 seconds
    setInterval(nextSlide, 8000);

    // Touch/swipe support for mobile
    let startX = 0;
    let endX = 0;

    track.addEventListener('touchstart', (e) => {
      startX = e.touches[0].clientX;
    });

    track.addEventListener('touchend', (e) => {
      endX = e.changedTouches[0].clientX;
      const diff = startX - endX;

      if (Math.abs(diff) > 50) { // Minimum swipe distance
        if (diff > 0) {
          nextSlide();
        } else {
          prevSlide();
        }
      }
    });
  });
</script>
</Layout>