  .wrap { max-width: 1100px; margin: 0 auto; padding: 0 20px; }
  .wrap.narrow { max-width: 800px; }
  .section { padding: 56px 0; background: #ffffff; color: #111; }

  /* Hero */
  .hero { padding: 56px 0 12px; text-align: center; background: #ffffff; color: #111; }
  .brand {
    font-size: clamp(28px, 5vw, 48px);
    line-height: 1.1;
    margin: 0 0 8px 0;
    background: linear-gradient(45deg, var(--color-purple) 0%, var(--color-blue) 35%, var(--color-yellow) 65%, var(--color-orange) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
  }
  .lead { font-size: 18px; margin: 0 0 6px 0; color: #222; }
  .sublead { font-size: 16px; margin: 0 0 18px 0; color: #444; }
  .sublead.centered { text-align: center; margin-bottom: 16px; }

  /* Promo + Beehiiv as a single unit */
  .newsletter-embed {
    display: grid;
    justify-items: center;
    row-gap: 8px;
    margin: 12px auto;
    width: 100%;
    max-width: 700px;
  }
  .promo-img {
    display: block;
    width: 100%;
    max-width: 420px; /* controls promo size so it is not huge */
    height: auto;
    margin: 0 auto;
  }
  .beehiiv-embed { display: block; margin-top: -12px !important; }

  /* Content blocks */
  .h { font-size: 24px; margin: 0 0 12px 0; color: #111; }
