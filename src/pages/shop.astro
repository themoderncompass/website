---
import Layout from '../layouts/Layout.astro';

// Shop page listing featured products from your Etsy store.  Replace the
// sample items below with real products, descriptions and links to
// your Etsy listings.  To keep the design cohesive, each item card
// uses a simple coloured background drawn from the logo palette
// instead of custom imagery.

const shopUrl = '#'; // Replace with your Etsy store URL
const items = [
  {
    title: 'Celestial Journal',
    description: 'A beautifully bound journal for capturing your dreams and intentions.',
    link: '#', // Replace with direct Etsy listing link
    color: 'var(--primary-color)',
  },
  {
    title: 'Guided Meditation Pack',
    description: 'Audio meditations to align your mind with your inner compass.',
    link: '#',
    color: 'var(--secondary-color)',
  },
  {
    title: 'Astrology Workbook',
    description: 'Interactive worksheets to explore your birth chart and beyond.',
    link: '#',
    color: 'var(--accent-color)',
  },
];

---
<Layout>
  <section class="shop">
    <h1>Shop</h1>
    <p class="intro">
      Visit our Etsy shop to discover curated tools and products designed to
      support your spiritual journey.  Each item below is a featured productâ€”click
      through to purchase or view more details.
    </p>
    <p class="shop-link">
      <a href={shopUrl} target="_blank" rel="noopener noreferrer">Browse the full shop on Etsy</a>
    </p>
    <div class="items">
      {items.map(({ title, description, link, color }) => (
        <a href={link} target="_blank" rel="noopener noreferrer" class="item" style={`background: ${color};`}>
          <h2>{title}</h2>
          <p>{description}</p>
        </a>
      ))}
    </div>
  </section>
</Layout>

<style>
  .shop {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .shop h1 {
    font-size: 2rem;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
  }

  .intro {
    font-size: 1rem;
    max-width: 700px;
    margin-bottom: 1rem;
  }

  .shop-link a {
    color: var(--secondary-color);
    font-weight: 600;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s ease;
  }

  .shop-link a:hover {
    border-color: var(--secondary-color);
  }

  .items {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .item {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 1.5rem;
    border-radius: 8px;
    color: #fff;
    text-decoration: none;
    height: 200px;
    position: relative;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .item h2 {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .item p {
    font-size: 0.9rem;
    line-height: 1.4;
  }

  .item:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }
</style>