---
// Layout component for The Modern Compass website.
// This component defines the common page structure, including the
// header with navigation, a main slot for page content, and a footer.

const year = new Date().getFullYear();
// Define the navigation links for the site.  The events link has been
// intentionally removed per the latest design guidance to reduce
// clutter and focus on core offerings.  You can reintroduce it by
// adding an object with an `href` and `label` as needed.

---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <title>The Modern Compass</title>

    <!-- Schema.org Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Organization",
          "name": "The Modern Compass",
          "url": "https://themoderncompass.io",
          "logo": "https://themoderncompass.io/logo.png",
          "description": "A framework for personal growth in Self, Trust, Character, and Relationships",
          "sameAs": [
            "https://www.tiktok.com/@themoderncompass"
          ],
          "founder": {
            "@type": "Person",
            "name": "Josh Imholte",
            "jobTitle": "Author & Personal Development Coach",
            "description": "Product leader in tech, author of Modern Compass framework"
          }
        },
        {
          "@type": "WebSite",
          "name": "The Modern Compass",
          "url": "https://themoderncompass.io",
          "description": "Helping you find direction in the moments that matter most",
          "publisher": {
            "@type": "Organization",
            "name": "The Modern Compass"
          }
        }
      ]
    }
    </script>

    <!-- Allow pages to inject additional head content -->
    <slot name="head" />
